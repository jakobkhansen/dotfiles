# Mouse mode
mode "mouse" {

    # set your three speeds here

    set $slow 1
    set $quick 10
    set $fast 50

    # Mouse movement (slow/fine-tuned) -- vim keybindings

    bindsym h exec --no-startup-id xdotool mousemove_relative -- -$quick 0
    bindsym j exec --no-startup-id xdotool mousemove_relative 0 $quick
    bindsym k exec --no-startup-id xdotool mousemove_relative -- 0 -$quick
    bindsym l exec --no-startup-id xdotool mousemove_relative $quick 0

    # Mouse movement (quicker) -- vim keybindings

    bindsym Shift+h exec --no-startup-id xdotool mousemove_relative -- -$fast 0
    bindsym Shift+j exec --no-startup-id xdotool mousemove_relative 0 $fast
    bindsym Shift+k exec --no-startup-id xdotool mousemove_relative -- 0 -$fast
    bindsym Shift+l exec --no-startup-id xdotool mousemove_relative $fast 0

    bindsym $mod+h exec --no-startup-id xdotool mousemove 480 540
    bindsym $mod+l exec --no-startup-id xdotool mousemove 1440 540

    bindsym z exec --no-startup-id xdotool mousemove 0 0


    # Left Click
    bindsym f exec --no-startup-id xdotool click 1

    # Middle Click
    bindsym d exec --no-startup-id xdotool click 2

    # Right Click
    bindsym s exec --no-startup-id xdotool click 3

    # Left Click-and-drag
    bindsym Shift+f exec --no-startup-id xdotool mousedown 1

    # Middle Click-and-drag 
    bindsym Shift+d exec --no-startup-id xdotool mousedown 2

    # Right Click-and-drag
    bindsym Shift+s exec --no-startup-id xdotool mousedown 3

    # Left Drag release
    bindsym Mod1+f exec --no-startup-id xdotool mouseup 1

    # Middle Drag release
    bindsym Mod1+d exec --no-startup-id xdotool mouseup 2

    # Right Drag release
    bindsym Mod1+s exec --no-startup-id xdotool mouseup 3



    # return to normal keybindings -- IMPORTANT!!

    bindsym Escape mode "default"
}

bindsym $mod+m mode "mouse"; exec --no-startup-id "xdotool mousemove_relative 0 1"
