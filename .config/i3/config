set $mode_gaps Toggle gaps: (1) off (2) on (3) off no polybar (4) big gaps (5) big gaps no polybar
bindsym $mod+g mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym 1 [class="^.*"] mode "default", gaps inner all set 1, gaps outer all set 1, exec --no-startup-id polybar-msg cmd show
    bindsym 2 [class="^.*"] mode "default", gaps inner all set 10, gaps outer all set 5, exec --no-startup-id polybar-msg cmd show
    bindsym 3 [class="^.*"] mode "default", gaps inner all set 1, gaps outer all set 1, exec --no-startup-id polybar-msg cmd hide
    bindsym 4 [class="^.*"] mode "default", gaps inner all set 20, gaps outer all set 10, exec --no-startup-id polybar-msg cmd show
    bindsym 5 [class="^.*"] mode "default", gaps inner all set 20, gaps outer all set 10, exec --no-startup-id polybar-msg cmd hide
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

